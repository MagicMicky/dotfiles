      "Bash(uname:*)",
      "Bash(env)",
      "Bash(diff:*)",
      "Bash(tar:*)",
      "Bash(unzip:*)",
      "Bash(cp:*)",
      "Bash(mv:*)",
      "Bash(python:*)",
      "Bash(pip:*)",
      "Bash(yarn:*)",
      "Bash(bun:*)",
      "Bash(make:*)",
      "Bash(go:*)",
      "Bash(docker:*)",
      "Bash(gh:*)"
