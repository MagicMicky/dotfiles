      "Bash(gh config*)",
      "Bash(gh * --admin*)",
      "Bash(gh api * -X POST*)",
      "Bash(gh api * -X PUT*)",
      "Bash(gh api * -X DELETE*)",
      "Bash(gh api * -X PATCH*)",
      "Bash(gh api * --method*)",
      "Bash(gh api -X *)",
      "Bash(gh api --method *)",
