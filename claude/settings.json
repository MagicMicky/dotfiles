    "ask": [
      "Bash(gh repo delete*)",
      "Bash(gh repo create*)",
      "Bash(gh repo archive*)",
      "Bash(gh repo rename*)",
      "Bash(gh repo edit*)",
      "Bash(gh secret*)",
